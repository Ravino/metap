{
  "presets": [
    "env",
    "es2015",
    "es2016",
    "es2017",
    "stage-0",
    "stage-1",
    "stage-2",
    "stage-3"
  ],

  "plugins": [
    "system-import-transformer",
    "transform-async-to-generator",
    "transform-object-rest-spread",
    "transform-es2015-destructuring",
    "transform-class-properties",
    "transform-decorators",
    "transform-object-assign",
    "transform-runtime"
  ],
  "env": {
    "test": {
      "presets": ["env", "stage-2"],
      "plugins": ["istanbul"]
    }
  }
}
